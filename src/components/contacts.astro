 ---
import locationIcon from "../assets/icon/location.svg?url";
import clockIcon from "../assets/icon/clock.svg?url";
import mailIcon from "../assets/icon/mail.svg?url";
import phoneIcon from "../assets/icon/phone.svg?url";
import intagramIcon from "../assets/icon/instagram.svg?url";
import wathAppIcon from "../assets/icon/wathApp.svg?url";
import tiktokIcon from "../assets/icon/tiktok.svg?url";
 ---
 <div class="flex flex-col items-center text-center gap-4">
      <div class="px-4 py-1 bg-orange-100 rounded-full">
        <span class="text-orange-600 text-sm font-medium">¿Necesitas ayuda?</span>
      </div>
      <h2 class="text-4xl font-bold text-blue-900">Contacto</h2>
      <p class="text-lg text-blue-700">Estamos aquí para atenderte. Comunícate con nosotros o visita nuestro taller.</p>
    </div>

<section id="contacto" class="max-w-screen-xl mx-auto px-4 py-12 flex flex-col gap-12 md:flex-row">
  
  <!-- Formulario -->
  <div class="w-full md:w-1/2 bg-gray-100 p-6 md:p-8 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold text-blue-900 mb-4">Envíanos un mensaje</h2>
    <form class="flex flex-col gap-4">
      <div>
        <label for="nombre" class="text-sm font-medium text-blue-700">Nombre</label>
        <input id="nombre" type="text" placeholder="Tu nombre"
          class="w-full mt-1 p-3 border border-blue-200 rounded-md placeholder:text-blue-400 text-sm" />
      </div>
      <div>
        <label for="telefono" class="text-sm font-medium text-blue-700">Teléfono</label>
        <input id="telefono" type="text" placeholder="Tu teléfono"
          class="w-full mt-1 p-3 border border-blue-200 rounded-md placeholder:text-blue-400 text-sm" />
      </div>
      <div>
        <label for="correo" class="text-sm font-medium text-blue-700">Correo Electrónico</label>
        <input id="correo" type="email" placeholder="Tu correo electrónico"
          class="w-full mt-1 p-3 border border-blue-200 rounded-md placeholder:text-blue-400 text-sm" />
      </div>
      <div>
        <label for="servicio" class="text-sm font-medium text-blue-700">Servicio que te interesa</label>
        <select id="servicio"
          class="w-full mt-1 p-3 border border-blue-200 rounded-md text-sm text-blue-800 bg-gray-50">
          <option>Selecciona un servicio</option>
          <option>Mecánica</option>
          <option>Diagnóstico</option>
          <option>Revisión general</option>
        </select>
      </div>
      <div>
        <label for="mensaje" class="text-sm font-medium text-blue-700">Mensaje</label>
        <textarea id="mensaje" rows="5" placeholder="Describe tu consulta..."
          class="w-full mt-1 p-3 border border-blue-200 rounded-md placeholder:text-blue-400 text-sm"></textarea>
      </div>
      <button type="submit"
        class="bg-orange-500 hover:bg-orange-600 text-white font-medium text-sm py-2.5 rounded-md">
        Enviar Mensaje
      </button>
    </form>
  </div>

  <!-- Información de Contacto -->
  <div class="w-full md:w-1/2 flex flex-col gap-6">
    <div>
      <h3 class="text-2xl font-bold text-blue-900">Información de Contacto</h3>
      <ul class="mt-4 text-blue-700 text-sm space-y-2">
        <li class="flex gap-2 items-center"> <i><img src={locationIcon} alt=""></i> Altos Mirandinos, Estado Miranda, Venezuela</li>
        <li class="flex gap-2 items-center"> <i><img src={phoneIcon} alt=""></i> +58 412-334-3519</li>
        <li class="flex gap-2 items-center"> <i><img src={mailIcon} alt=""></i> lycosteam7@gmail.com</li>
        <li class="flex gap-2 items-center"> <i><img src={clockIcon} alt=""></i> Lunes a Sábado: 8:00 AM - 6:00 PM</li>
      </ul>
    </div>

    <div>
      <h3 class="text-2xl font-bold text-blue-900">Síguenos</h3>
      <div class="flex gap-4 mt-2">
        <a href="https://www.instagram.com/lycos.team/"><div class="w-10 h-10 bg-gray-800 rounded-full flex justify-center items-center"> <i><img src={intagramIcon} alt=""></i> </div></a>
        <a href="https://api.whatsapp.com/send/?phone=584123343519&text&type=phone_number&app_absent=0"><div class="w-10 h-10 bg-gray-800 rounded-full flex justify-center items-center"> <i><img src={wathAppIcon} alt=""></i> </div></a>
        <a href="https://www.tiktok.com/@lycos.team"><div class="w-10 h-10 bg-gray-800 rounded-full flex justify-center items-center"> <i><img src={tiktokIcon} alt=""></i></div></a>
      </div>
    </div>

    <div>
      <h3 class="text-2xl font-bold text-blue-900">Ubicación</h3>
      <div class="w-full h-64 bg-gray-300 rounded-lg mt-2">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3924.6149668374205!2d-66.97279560873719!3d10.372639137044432!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8c2af302505d48d5%3A0xe38620de18476b28!2sLycos%20Team!5e0!3m2!1ses-419!2sve!4v1749757979691!5m2!1ses-419!2sve" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
  </div>
</section>
